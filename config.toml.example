# Config template. Copy to config.toml and customize.
# Paths, retention, log level. Secrets go in .env only.
#
# Profile: override via APP_PROFILE or --profile. Default: "dev"

profile = "dev"

[paths.dev]
db_path = "./data.db"

[paths.prod]
db_path = "/var/lib/app/data.db"

[logging.dev]
level = "DEBUG"
retention_days = 14

[logging.prod]
level = "INFO"
retention_days = 30
